{
    "openapi": "3.0.0",
    "info": {
        "description": "Allowed configuration for theme-settings.json.",
        "version": "0.3.0",
        "title": "Theme Settings"
    },
    "paths": {},
    "components": {
        "schemas": {
            "ThemeSettings": {
                "type": "object",
                "description": "Settings for customizing the look and feel of the website.",
                "properties":{
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    },
                    "theme": {
                        "$ref": "#/components/schemas/Theme"
                    },
                    "features": {
                        "$ref": "#/components/schemas/Features"
                    }
                }
            },
            "Meta": {
                "type": "object",
                "description": "Metadata concerning the website as a whole, like the website title.",
                "properties": {
                    "title": {
                        "type": "string",
                        "description": "A title for the website, which will be appended to the title of the page in the HTML `<title>` tag with the `\"|\"` character separating the two."
                    }
                }
            },
            "Theme": {
                "type": "object",
                "description": "Settings concerning the visual appearance of the website and the styling of its components."
            },
            "Features": {
                "type": "object",
                "description": "Flags for enabling or disabling features of the website.",
                "properties": {
                    "docs": {
                        "$ref": "#/components/schemas/DocumentationPageFeatures"
                    }
                }
            },
            "DocumentationPageFeatures": {
                "type": "object",
                "description": "Flags for enabling or disabling `/documentation` page features.",
                "properties": {
                    "quickNavigation": {
                        "$ref": "#/components/schemas/FeatureFlagEnable"
                    }
                }
            },
            "FeatureFlagEnable": {
                "type": "object",
                "description": "Enables a feature if `enable` is `true`.",
                "required": [
                    "enable"
                ],
                "properties": {
                    "enable": {
                        "type": "boolean"
                    }
                }
            }
        },
        "requestBodies": {},
        "securitySchemes": {},
        "links": {},
        "callbacks": {}
    }
}
